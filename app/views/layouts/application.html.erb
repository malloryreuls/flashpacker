<!DOCTYPE html>
<html>
<head>
  <title>Backpackerapp</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>

	<nav class="top-bar contain-to-grid sticky" data-topbar>
	  <ul class="title-area">
	    <li class="name">
	      <h1><%= link_to 'Flashpacker', root_path %></h1>
	    </li>
	     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
	    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
	  </ul>

	  <section class="top-bar-section">
	    <!-- Right Nav Section -->
	    <ul class="right">
	 	<% if current_user %>
			<li><%= link_to new_spot_path do %><i class="fa fa-map-marker"></i> Add Spot<% end %></li>
			<li><%= link_to user_path(current_user.id) do %>Hello, <%= current_user.username %><% end %></li>
			<li><%= link_to 'Sign Out', sessions_path, :method => :delete %></li>
		<% else %>
			<li><%= link_to 'Sign In', new_sessions_path %></li>
			<li><%= link_to 'Sign Up', new_user_path %></li>
		<% end %>
	    </ul>

	    <!-- Left Nav Section -->
	    <ul class="left">
	      <li><%= link_to spots_path do %><i class="fa fa-list"></i> List View<% end %></li>
	    </ul>
	  </section>
	</nav>

	<%= yield %>

</body>
</html>
