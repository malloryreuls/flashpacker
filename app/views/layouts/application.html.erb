<!DOCTYPE html>
<html>
<head>
  <title>Backpackerapp</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>
<body>

<% if current_user %>
	<button><%= link_to 'Add Spot', new_spot_path %></button>
	<button><%= link_to 'Sign Out', sessions_path, :method => :delete %></button>
<% else %>
	<button><%= link_to 'Sign In', new_sessions_path %></button>
	<button><%= link_to 'Sign Up', new_user_path %></button>
<% end %>
<button><%= link_to 'Map', root_path %></button>
<button><%= link_to 'List View', spots_path %></button>

<%= yield %>

</body>
</html>
